{
    "manifest_version": 3,
    "name": "VoxLingo: Dark Mode",
    "description": "This extension enables dark mode on any webpage.",
    "version": "1.0.0",
    "background": {
        "service_worker": "service_worker.js"
    },
    "action": {
        "default_icon": {
            "16": "images/icon-16.png",
            "32": "images/icon-32.png",
            "128": "images/icon-128.png"
        }
    },
    "permissions": ["activeTab", "scripting"]
}